        <h1 class="title">Mettre à jour l'inscription de {{ stagiaire }}</h1>
    {% else %}
        <h1 class="title mb-5">Formulaire d'inscription</h1>
    {% endif %}
    
    <div id="formContainer">

       {{ form_start(formAddStagiaire) }}
