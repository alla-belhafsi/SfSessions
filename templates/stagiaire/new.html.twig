                <div class="center col-sm">
                    {{ form_row(formAddStagiaire.ville) }} 
                </div>
            
                <div class="center col-sm">
                    {{ form_row(formAddStagiaire.cp) }} 
                </div>
            </div>

            <div class="row">
                <div class="center col-sm">
                    {{ form_row(formAddStagiaire.mail) }} 
