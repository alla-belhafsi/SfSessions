{# Étend le template de base.html.twig #}
{% extends 'base.html.twig' %}

{# Définit le contenu du bloc 'title' qui sera utilisé dans le template parent base.html.twig #}
{% block title %}Programmer une Session{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="title">Mettre à jour le {{ Module.nom }} de la session {{ Session.intitule }} </h1>
    {% else %}
        <h1 class="title">Programmer une Session</h1>
    {% endif %}
    
    <div id="formContainer">

       {{ form_start(formAddProgramme) }}
            <div class="row">
                <div class="title">
                    {{ form_row(formAddProgramme.session) }} 
                </div>
            </div>
            <div class="row">
                <div class="col-sm">
                    {{ form_row(formAddProgramme.module) }} 
                </div>
                <div class="col-sm">
                    {{ form_row(formAddProgramme.nombreJours) }} 
                </div>
            </div>
            
            <div class="center">
                <p>{{ form_row(formAddProgramme.enregistrer) }}</p>
            </div>
             
        {{ form_end(formAddProgramme) }}

    </div>
    

{% endblock %}