{# Étend le template de base.html.twig #}
{% extends 'base.html.twig' %}

{# Définit le contenu du bloc 'title' qui sera utilisé dans le template parent base.html.twig #}
{% block title %}Ajouter un Formateur{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="title">Mettre à jour {{ formateur }}</h1>
    {% else %}
        <h1 class="title">Ajouter un Formateur</h1>
    {% endif %}
    
    <div id="formContainer">

       {{ form_start(formAddFormateur) }}
            <div class="row">
                <div class="title">
                    {{ form_row(formAddFormateur.prenom) }} 
                </div>
            </div>

            <div class="row">
                <div class="title">
                    {{ form_row(formAddFormateur.nom) }} 
                </div>
            </div>
            
            <div class="center">
                <p>{{ form_row(formAddFormateur.enregistrer) }}</p>
            </div>
             
        {{ form_end(formAddFormateur) }}

    </div>
    

{% endblock %}