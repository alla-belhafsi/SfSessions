{# Étend le template de base.html.twig #}
{% extends 'base.html.twig' %}

{# Définit le contenu du bloc 'title' qui sera utilisé dans le template parent base.html.twig #}
{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <h1 class="title">Modules par Catégorie</h1>

    <div id="container">
        <div class="card">
            <button class="btn btn-add rounded-circle"><a class="linkAddBtn" href="{{ path('new_categorie') }}">+</a></button>
            <table class="table">
                <thead>
                    <tr>
                        <th class="border-0">Catégorie</th>
                        <th class="center border-0">Nombre de Modules</th>
                        <th class="center border-0">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for categorie in categories %}
                        <tr>
                            <td class="border-0">
                                <div class="link link-shadow">
                                    <h3><a href="{{ path('show_module', {'id': categorie.id}) }}">{{ categorie|raw }}</a></h3>
                                </div>
                            </td>
                            <td class="border-0">
                                <p class="number">{{ categorie.modules | length }}</p>
                            </td>
                            <td class="center border-0">
                                <a class="btn btn-warning linkBtn" href="{{ path('edit_categorie', {'id': categorie.id}) }}">Modifier</a>
                                <a class="btn btn-danger linkBtn" href="{{ path('delete_categorie', {'id': categorie.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
