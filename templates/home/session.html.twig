{# Étend le template de base.html.twig #}
{% extends 'base.html.twig' %}

{# Définit le contenu du bloc 'title' qui sera utilisé dans le template parent base.html.twig #}
{% block title %}Ajouter une entreprise{% endblock %}

{% block body %}
    {% if edit %}
        <h1 class="title">Mettre à jour {{ session.intitule }}</h1>
    {% else %}
        <h1 class="title">Ajouter une Session</h1>
    {% endif %}
    <div class="formContainer">
       {# {{ form(formAddEntreprise) }}  #}

       {{ form_start(formAddSession) }}
            <div class="row">
                <div class="col-sm">
                    {{ form_row(formAddSession.raisonSociale) }} 
                </div>
                <div class="col-sm">
                    {{ form_row(formAddSession.dateCreation) }}  
                </div>
            </div>
            {{ form_row(formAddSession.adresse) }}
            <div class="row">
                <div class="col-sm">
                    {{ form_row(formAddSession.cp) }}  
                </div>
                <div class="col-sm">
                    {{ form_row(formAddSession.ville) }}
                </div>
            </div>
            <div class="center">
                <p>{{ form_row(formAddSession.enregistrer) }}</p>
            </div>
             
        {{ form_end(formAddSession) }}

    </div>
    

{% endblock %}