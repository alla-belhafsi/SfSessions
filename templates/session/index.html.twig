{# Étend le template de base.html.twig #}
{% extends 'base.html.twig' %}

{# Définit le contenu du bloc 'title' qui sera utilisé dans le template parent base.html.twig #}
{% block title %}Liste des sessions{% endblock %}

{% block body %}
    <h1 class="title">Liste des sessions</h1>

    {% if not sessions %}
        <p class="center"><a href="{{ path('new_session') }}" class="btn btn-success">Ajouter une session</a></p>
        
    {% else %}
        
    <table class="table table-borderless">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for session in sessions %}
                <tr class="d-flex justify-content-between align-items-center">
                    <td class="link link-shadow"><a href="{{ path('show_session', {'id': session.id}) }}">{{ session.intitule }}</a></td>
                    <td>
                        <a href="{{ path('edit_session', {'id': session.id}) }}" class="linkBtn btn btn-warning">Edit</a>
                        <a href="{{ path('delete_session', {'id': session.id}) }}" class="linkBtn btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endif %}

{% endblock %}